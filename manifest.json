{
  "manifest_version": 2,

  "name": "Tab Rotate",
  "description": "Loop through a set of tabs - ideal for a Dashboard or Advertisement Display",
  "version": "0.4.0",

  "browser_action": {
    "default_icon": "src/img/Play-38.png",
    "default_title": "Start Tab Rotate"
  },
  "options_page": "index.html",

  "background": {
    "scripts": ["background.bundle.js", "import-analytics.bundle.js"]
  },

  "icons": {
    "16": "src/img/Play-16.png",
    "32": "src/img/Play-32.png",
    "48": "src/img/Play-48.png",
    "128": "src/img/Play-128.png"
  },

  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://unpkg.com; object-src 'self'",

  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "file://*/",
    "http://*/",
    "https://*/",
    "tabs"
  ]
}
